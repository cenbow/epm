				<artifactId>epm-impl</artifactId>
				<version>${project.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>br.net.woodstock.epm</groupId>
				<artifactId>epm-impl</artifactId>
				<version>${project.version}</version>
				<scope>provided</scope>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>br.net.woodstock.epm</groupId>
				<artifactId>epm-process-api</artifactId>
				<version>${project.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
