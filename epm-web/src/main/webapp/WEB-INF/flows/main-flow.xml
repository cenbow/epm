<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	abstract="true">

	<view-state id="index" view="/spring/index" redirect="true" />

	<view-state id="logoff" view="/" redirect="true" />
	
	<!-- Menu -->
	<view-state id="security_user" view="/spring/security/user" redirect="true" />
	
	<global-transitions>
		<transition on="index" to="#index.index" />
		<transition on="logoff" to="logoff">
			<evaluate expression="logonAction.logoff()" />
		</transition>
		<transition on="security_user" to="security_user" />
	</global-transitions>

</flow>